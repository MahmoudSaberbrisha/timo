<h1 class="text-2xl font-bold mb-4">إدارة الأدوار والصلاحيات</h1>

<div class="mb-4">
    <button id="addRoleBtn" class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600">إضافة دور جديد</button>
</div>

<div id="rolesContainer" class="space-y-4">
    <!-- Roles will be dynamically inserted here -->
</div>

<!-- Role Modal -->
<div id="roleModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden">
    <div class="bg-white rounded-lg shadow-lg w-96 p-6 relative">
        <h3 class="text-xl font-bold mb-4">إضافة دور جديد</h3>
        <form id="roleForm" class="space-y-4">
            <div>
                <label for="roleName" class="block mb-1 font-semibold">اسم الدور</label>
                <input type="text" id="roleName" name="roleName" required class="w-full border rounded p-2" />
            </div>
            <div>
                <label for="roleDescription" class="block mb-1 font-semibold">وصف الدور</label>
                <textarea id="roleDescription" name="roleDescription" class="w-full border rounded p-2"></textarea>
            </div>
            <div>
                <label for="roleStatus" class="block mb-1 font-semibold">الحالة</label>
                <select id="roleStatus" name="roleStatus" required class="w-full border rounded p-2">
                    <option value="active">نشط</option>
                    <option value="inactive">معطل</option>
                </select>
            </div>
            <div class="flex justify-end gap-2 mt-4">
                <button type="button" id="cancelRoleBtn"
                    class="bg-gray-300 hover:bg-gray-400 px-4 py-2 rounded">إلغاء</button>
                <button type="submit" class="bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded">حفظ</button>
            </div>
        </form>
        <button id="closeRoleModal" class="absolute top-2 right-2 text-gray-600 hover:text-gray-800">
            &times;
        </button>
    </div>
</div>