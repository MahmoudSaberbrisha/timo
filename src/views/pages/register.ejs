<%- include('../layouts/main', { title: 'التسجيل', body: '' }) %>
<div class="max-w-md mx-auto bg-white p-6 rounded-lg shadow-md">
  <h2 class="text-2xl font-bold mb-4 text-center">التسجيل</h2>
  <% if (error) { %>
    <p class="text-red-500 mb-4"><%= error %></p>
  <% } %>
  <form action="/auth/register" method="POST" class="space-y-4">
    <div>
      <label for="username" class="block text-sm font-medium">اسم المستخدم</label>
      <input type="text" id="username" name="username" class="w-full p-2 border rounded-md" required>
    </div>
    <div>
      <label for="email" class="block text-sm font-medium">البريد الإلكتروني</label>
      <input type="email" id="email" name="email" class="w-full p-2 border rounded-md" required>
    </div>
    <div>
      <label for="password" class="block text-sm font-medium">كلمة المرور</label>
      <input type="password" id="password" name="password" class="w-full p-2 border rounded-md" required>
    </div>
    <button type="submit" class="w-full bg-blue-600 text-white p-2 rounded-md hover:bg-blue-700">التسجيل</button>
  </form>
</div>
